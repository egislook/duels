<div class="page" style="width:600px">
    {{~tutorial :tut}}
        <a id="{{=tut.tag}}">{{=tut.tag}}</a>
        <h1 style="padding-top:20px">{{=tut.name}}</h1>
        <h4 style="padding-top:10px; padding-bottom:10px">{{=tut.desc}}</h4>
        <ol class="b-t">
        {{~tut.steps :step:i}}
            <li style="padding:10px;text-align:left;"><b>{{=i+1}}. </b>{{=step.desc}}</li>
            {{? step.img}}
            <img style="max-width:400px" src="{{=step.img}}">
            {{?}}
        {{~}}
        </ol>
    {{~}}
</div>

<div id="faq-menu" style="position:fixed;left:0px;top:3px;">
{{~tutorial :tut}}
    <a href="#{{=tut.tag}}">
        <div class="b-a neutral click left" style="clear:both;">
        {{=tut.name}}
        </div>
    </a>
{{~}}
</div>
  
